<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="4dp"/>
            <size android:height="20dp" /> <!-- Set the desired height for the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="@color/white"/> <!-- Set the desired color for the progress -->
            <corners android:radius="4dp"/>
            <size android:height="20dp"/> <!-- Match the background height -->
        </shape>
    </item>
</layer-list>
